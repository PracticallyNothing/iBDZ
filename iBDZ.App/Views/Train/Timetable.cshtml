@model List<iBDZ.Data.ViewModels.ShortTrainInfoModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <table class="table">
        <thead>
            <tr>
                <td>Route</td>
                <td>Time of departure</td>
                <td>Time of arrival</td>
                <td>Delay</td>
                <td>Free spaces</td>
            </tr>
        </thead>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Route</td>
                <td>@t.TimeOfDeparture</td>
                <td>@t.TimeOfArrival</td>
                <td>@t.Delay</td>
                <td>@t.FreeSpaces</td>
            </tr>
        }
    </table>
}
